<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">157</argument>
                <argument name="logo_img_height" xsi:type="number">100</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="promo_left_column" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">promo_left_column</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>